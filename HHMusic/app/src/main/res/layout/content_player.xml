<?xml version="1.0" encoding="utf-8"?>


<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <variable name="clickListener"
                  type="android.view.View.OnClickListener"/>
        <variable name="status_play" type="boolean"/>
        <variable name="songItem"
                  type="com.hhmusic.data.entities.Song"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_player"
        tools:context=".ui.activity.PlayerActivity">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="0dp"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_margin="10dp"
                 android:id="@+id/framelayout1"
                 app:layout_constraintVertical_weight="1"
                 app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
    >


        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/albumArt"
                    android:scaleType="fitCenter"
                   android:src="@android:drawable/picture_frame"
        />
        <ImageButton android:layout_width="@dimen/btn_player"
                     android:layout_height="@dimen/btn_player"
                     android:layout_gravity="left|bottom"
                     android:onClick="@{clickListener}"
                     android:src="@drawable/ic_menu_camera"
                     android:id="@+id/camerabtn"
        />

        <ImageButton android:layout_width="@dimen/btn_player"
                     android:layout_height="@dimen/btn_player"
                     android:layout_gravity="right|bottom"
                     android:id="@+id/favouritebtn"
                     android:onClick="@{clickListener}"
                     android:src="@android:drawable/btn_star_big_off"
        />
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/framelayout1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/constraintLayout"
        >
    <ImageButton android:layout_width="@dimen/btn_player"
                 android:layout_height="@dimen/btn_player"
                 android:src="@android:drawable/ic_input_add"
                 android:id="@+id/add_to_playlist"
                 android:onClick="@{clickListener}"
                 android:layout_margin="10dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toTopOf="@id/constraintLayout"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintRight_toLeftOf="@+id/title"/>
    <TextView android:layout_width="match_parent"
                 android:maxLines="1"
                 android:layout_height="@dimen/btn_player"
                android:textAlignment="center"
                 android:id="@+id/title"
                 app:layout_constraintStart_toEndOf="@+id/add_to_playlist"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                 app:layout_constraintRight_toLeftOf="@+id/view_song_playlist"/>

    <ImageButton android:layout_width="@dimen/btn_player"
                 android:layout_height="@dimen/btn_player"
                 android:id="@+id/view_song_playlist"
                 android:onClick="@{clickListener}"
                 app:layout_constraintLeft_toRightOf="@+id/title"
                 app:layout_constraintTop_toTopOf="@id/constraintLayout"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:src="@android:drawable/ic_dialog_dialer"
                 android:layout_margin="10dp"/>
    <TextView android:layout_width="match_parent"
              android:maxLines="1"
              android:textAlignment="center"
              android:layout_height="@dimen/btn_player"
              android:id="@+id/artist"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/title"
              app:layout_constraintRight_toLeftOf="parent"/>

    <TextView android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:id="@+id/start_time"
              android:text="00:00"
              android:layout_marginLeft="16dp"
              app:layout_constraintTop_toBottomOf="@id/artist"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintRight_toLeftOf="@id/progressBar"/>
    <TextView android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:id="@+id/end_time"
              android:text="00:00"
              app:layout_constraintTop_toBottomOf="@id/artist"
              app:layout_constraintLeft_toRightOf="@id/progressBar"
              app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="16dp"
            tools:layout_editor_absoluteY="310dp"
            tools:layout_editor_absoluteX="181dp"
            app:layout_constraintTop_toBottomOf="@+id/artist"
            app:layout_constraintRight_toLeftOf="@+id/end_time"
            app:layout_constraintLeft_toRightOf="@+id/start_time"
            android:id="@+id/progressBar"/>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="100dp"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/progressBar"
                  android:layout_margin="20dp"
                  android:gravity="center"
    >
        <ImageButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:onClick="@{clickListener}"
                     android:layout_height="@dimen/btn_control_music"
                     android:id="@+id/repeat"
                     android:src="@android:drawable/ic_menu_rotate"
                     />
        <ImageButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:onClick="@{clickListener}"
                     android:layout_height="@dimen/btn_control_music"
                     android:id="@+id/previous"
                     android:src="@android:drawable/ic_media_previous"/>
        <ImageButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:onClick="@{clickListener}"
                     android:layout_height="@dimen/btn_control_music"
                     android:src="@android:drawable/ic_media_play"
                     android:id="@+id/play"/>
        <ImageButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:onClick="@{clickListener}"
                     android:layout_height="@dimen/btn_control_music"
                     android:src="@android:drawable/ic_media_next"
                     android:id="@+id/next"/>
        <ImageButton android:layout_width="0dp"
                     android:layout_weight="1"
                     android:onClick="@{clickListener}"
                     android:layout_height="@dimen/btn_control_music"
                     android:src="@android:drawable/ic_menu_close_clear_cancel"
                     android:id="@+id/shuffle"/>

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>